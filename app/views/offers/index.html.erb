<h1>Listing offers</h1>

<table>
  <tr>
    <th>Distributor</th>
    <!-- <th>Parent</th> -->
    <th>Name</th>
    <th>Description</th>
    <th>Body</th>
    <th>Link</th>
    <th>Sublink</th>
    <th>Is public</th>
    <th>Is deleted</th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.distributor.name %></td>
    <!-- <td><%#= offer.parent %></td> -->
    <td><%= offer.name %></td>
    <td><%= offer.description %></td>
    <td><%= offer.body %></td>
    <td><%= offer.link %></td>
    <td><%= offer.sublink %></td>
    <td><%= offer.is_public %></td>
    <td><%= offer.is_deleted %></td>
    <td><%= link_to 'Show', [@distributor, offer] %> | <%= link_to 'Edit', [:edit, @distributor, offer] %> | <%= link_to 'Destroy', [@distributor, offer], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Offer', [:new, @distributor, :offer] %>
